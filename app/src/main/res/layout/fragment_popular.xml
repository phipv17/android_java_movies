<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PopularFragment"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="@dimen/dp_16"
        android:id="@+id/viewPagerLoop"
        android:layout_width="wrap_content"
        android:layout_height="275dp"/>
    
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutLoop"
        app:tabBackground="@drawable/selector_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorGravity="center"
        app:tabGravity="center"
        android:layout_below="@+id/viewPagerLoop">
    </com.google.android.material.tabs.TabLayout>


    <TextView
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_8"
        android:id="@+id/tvPopular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popular"
        android:layout_below="@+id/tabLayoutLoop"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dp_15"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPopular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPopular"
        android:layout_marginTop="@dimen/dp_8"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_8"
        android:id="@+id/tvRecomend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommend"
        android:layout_below="@+id/rvPopular"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dp_15"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecomed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRecomend"
        android:layout_marginTop="@dimen/dp_8"
        >

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>

</androidx.core.widget.NestedScrollView>